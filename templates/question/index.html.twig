{% extends 'base.html.twig' %}

{% block title %}Index Question{% endblock %}

{% block body %}
    <br>
    <h1>Index Question</h1>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.categorie }}</td>
                <td>{{ question.question }}</td>
                <td>
                    <a href="{{ path('question_show', {'id': question.id}) }}">Voir</a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('question_new') }}">Ajouter</a>
{% endblock %}
